<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyMaterialDesign" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textColorConnected">@color/green</item>
        <item name="textColorDisConnected">@color/light_gray</item>
    </style>

    <style name="LimeTheme" parent="Base.Theme.MyMaterialDesign">
        <item name="colorPrimary">@color/lime</item>
        <item name="colorPrimaryVariant">@color/lime_dark</item>
        <item name="colorSecondary">@color/lime</item>
    </style>

    <style name="OrangeTheme" parent="Base.Theme.MyMaterialDesign">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange_dark</item>
        <item name="colorSecondary">@color/orange</item>
    </style>

    <style name="GreenTheme" parent="Base.Theme.MyMaterialDesign">
        <item name="colorPrimary">#388e3c</item>
        <item name="colorPrimaryVariant">#6abf69</item>
        <item name="colorSecondary">#00600f</item>
    </style>

    <style name="BlueLightTheme" parent="Base.Theme.MyMaterialDesign">
        <item name="colorPrimary">#29b6f6</item>
        <item name="colorPrimaryVariant">#73e8ff</item>
        <item name="colorSecondary">#0086c3</item>
    </style>

    <style name="RedTheme" parent="Base.Theme.MyMaterialDesign">
        <item name="colorPrimary">#e53935</item>
        <item name="colorPrimaryVariant">#ff6f60</item>
        <item name="colorSecondary">#ab000d</item>
    </style>

    <style name="SplashTheme" parent="LimeTheme">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="MyChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="rippleColor">#CDDC39</item>
        <item name="backgroundColor">@color/green</item>
    </style>

    <style name="RobotoFont" parent="Theme.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="FelipaFont">
        <item name="android:fontFamily">@font/felipa</item>
    </style>

    <style name="MyBottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorSurface">?attr/colorPrimary</item>
    </style>

</resources>
